{
  "name": "elquire",
  "version": "0.1.0",
  "description": "Local Node dependencies without the hassle: require by a given name instead of a relative path.",
  "main": "index.js",
  "author": "Sam Gluck <sdgluck@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sdgluck/elquire.git"
  },
  "engines": {
    "node": ">=0.12.0"
  },
  "scripts": {
    "test": "node ./node_modules/mocha/bin/_mocha test",
    "lint": "eslint ./src/index.js",
    "build": "babel ./src --out-dir ./bin",
    "check": "npm run -s lint && npm -s test && npm run -s build",
    "prepublish": "npm run check && npm run build"
  },
  "bugs": {
    "url": "https://github.com/sdgluck/elquire/issues"
  },
  "keywords": [
    "elquire",
    "local",
    "dependency",
    "dependencies",
    "module",
    "modules",
    "loader",
    "extension",
    "transform",
    "path",
    "require"
  ],
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.2.0",
    "babel-eslint": "^5.0.0-beta4",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-stage-0": "^6.3.13",
    "catch-and-match": "0.0.1",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^2.1.1",
    "eslint-config-airplus": "^1.0.6",
    "eslint-plugin-react": "^3.13.1",
    "expect": "^1.13.0",
    "mocha": "^2.3.4"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "airbnb",
      "airplus"
    ],
    "env": {
      "browser": true,
      "node": false
    },
    "rules": {
      "space-before-function-paren": [
        2,
        "always"
      ],
      "padded-blocks": [
        1,
        "never"
      ],
      "object-curly-spacing": [
        2,
        "always"
      ],
      "brace-style": [
        2,
        "stroustrup"
      ],
      "consistent-return": 0
    }
  }
}
